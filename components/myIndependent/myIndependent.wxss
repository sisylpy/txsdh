/* components/shareButton/mymodal.wxss */

.mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  /* display: flex; *//* justify-content: center; */
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9998;
  padding-left: 5%;
  padding-right: 5%;
}

.modal-content {
  width: 90%;
  height: 50%;
  left: 5%;
  top: 3%;
  background-color: #fff;
  position: fixed;
}

.top {
  height: 20%;
  width: 100%;
  background: rgb(27, 27, 27);
  display: flex;
  flex-flow: column nowrap;
  justify-items: center;
  justify-content: center;
}

.goodsTitle {
  font-size: 60rpx;
  color: white;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  /* background: yellow; */
  padding: 10rpx 20rpx;
}

.smallclose {
  width: 50rpx;
  height: 50rpx;
  line-break: 60rpx;
  border: 2px solid white;
  border-radius: 50%;
  float: right;
  margin-right: 10rpx;
  font-size: 36rpx;
  text-align: center;
}

/* 2 */

.body {
  display: flex;
  flex-flow: column nowrap;
  height: 80%;
  align-content: stretch;
}

.goods_contents {
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  flex-basis: 75%;
  justify-content: space-around;
  padding-top: 10rpx;
}

.with-lr-padding {
  padding-left: 20rpx;
  padding-right: 20rpx;
}

/* 1, */

.number_content {
  display: flex;
  flex-flow: row nowrap;
  flex-basis: 50%;
  align-items: center;
  /* background: green; */
}

/* 3 */

.explain {
  font-size: 38rpx;
  /* color: gray; */
  margin-right: 10rpx;
  flex-basis: 30%;
  
}

.number {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  /* background: blue; */
  flex-basis: 65%;
}


.inputNumber {
  height: 100%;
  border-radius: 20rpx;
  border: 1px solid #1295d6;
  padding-left: 10rpx;
  line-height: 70rpx;
  height: 70rpx;
  font-size: 38rpx;
  /* text-align: center; */
}

.btn-wrapper {
  /* background: gray; */
  flex-basis: 25%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
}

.btn_row {
  width: 50%;
  margin-left: 50%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  font-size: 36rpx;
  align-items: center;
  /* background: yellow; */
}

.confirm-btn {
  /* background: red; */
  color: #1295d6;
}

.cancel-btn {
